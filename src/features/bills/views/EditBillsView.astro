---
import { actions } from "astro:actions";
import H1 from "../../../components/H1.astro";
import AppLayout from "../../../layouts/AppLayout.astro";
import EditBillCalendar from "../components/EditBillCalendar";

const accounts = await Astro.callAction( actions.accounts.index, {})
const bills = await Astro.callAction( actions.bill.index, {})
---
<AppLayout title="Edit Bill Calendar">

    <EditBillCalendar 
        bills={bills.data?.bills ?? []}
        accounts={accounts.data ?? []} 
        client:only="react"
    />

</AppLayout>