---
interface Props {
    type : 'spending' | 'income'
    heightRatio : number
}

const { type, heightRatio } = Astro.props
---

<div
    class:list={[
        "w-3.75 rounded-md animate-bargraph",
        type === 'spending' && "bg-red/40",
        type === 'income' && "bg-green/60"
    ]}
    style={`height : ${heightRatio}px;`}
/>