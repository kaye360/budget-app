<button 
    id="more-transactions-button" 
    class="bg-slate-700 p-6 mt-6 rounded-xl mb-36 w-full cursor-pointer text-lg hover:bg-blue "
>
    More Transactions
</button>


<script>
import { el } from "../../../utils/El"
import { getTransactions } from "../_lib/getTransactions"
import { renderTransactions } from "../_lib/renderTransactions"

document.addEventListener('astro:page-load', () => {

    let page = 1

	const moreTransactionsButton = el<HTMLButtonElement>('#more-transactions-button')
    moreTransactionsButton?.addEventListener('click', () => loadNextTransactionPage() )

    async function loadNextTransactionPage() {

		const transactions = await getTransactions(1, {
            by : 'recent',
            page : page,
            perPage : 50
        })
        
        if( !transactions.data ) {
            return
        }
        
		renderTransactions(
			transactions.data, 
			el('transaction-list')
		)
        page += 1

        if( page === transactions.totalPages) {
            moreTransactionsButton?.remove()
        }
    }
})
</script>
